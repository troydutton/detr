{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug DETR",
            "type": "debugpy",
            "request": "launch",
            "module": "accelerate.commands.launch",
            "args": [
                "--num_processes=1",
                "--main_process_port=29500",
                "src/train.py",
                "--config-name=ddetr",
                "train.output_dir=/data/troy/models/detr/debug",
                "train.batch_size=2",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "justMyCode": true 
        }
    ]
}